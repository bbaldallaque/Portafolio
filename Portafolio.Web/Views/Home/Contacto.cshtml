
@{
	ViewData["Tile"] = "Contacto";
}

<h1>Formulario de Contacto</h1>

<form asp-controller="home" asp-action="Contacto">
	<div class="mb-3">
		<label for="nombre" class="form-label">Nombre</label>
		<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Su nombre" />
	</div>
	<div class="mb-3">
		<label for="email" class="form-label">Email</label>
		<input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com" />
	</div>
	<div class="mb-3">
		<label for="mensaje" class="form-label">Mensaje</label>
		<textarea class="form-control" id="mensaje" name="mensaje" rows="3" placeholder="su mensaje"></textarea>
	</div>
</form>